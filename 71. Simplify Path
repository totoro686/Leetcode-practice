class Solution {
    public String simplifyPath(String path) {
        String ss[] = path.split("/");
        Stack<String> sta = new Stack<String>();
        
        for(String s:ss){
            if(s.equals(".") || s.equals(""))continue;
            else if(s.equals("..")){
                if(!sta.isEmpty())sta.pop();
            }else{
                sta.add(s);
            }
        }
        
        StringBuilder sb = new StringBuilder();
        
        if(sta.isEmpty())return "/";
        while(!sta.isEmpty()){
            sb.insert(0, "/"+sta.pop());
        }
        
        return sb.toString();
    }
}

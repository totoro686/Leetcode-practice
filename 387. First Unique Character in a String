class Solution {
    public int firstUniqChar(String s) {
        if(s.length() == 0) return -1;
        int[] freq = new int[26];
        for(int i = 0; i < s.length(); i++){
            freq[s.charAt(i) - 'a']++;
        }
        
        for(int i = 0; i < s.length(); i++){
            if(freq[s.charAt(i) - 'a'] == 1){
                return i;
            }
        }
        
        return -1;
    }
}



class Solution {
    public int firstUniqChar(String s) {
        int checker=0, duplicate = 0;
        for (int i=0; i<s.length(); i++) {
            int n = s.charAt(i) - 'a';
            int val = 1 << n;
            if ((checker & val) > 0){
                duplicate |= val;
            } else{
                checker |= val;
            } 
        }
        for (int i=0; i<s.length(); i++){
            int n = s.charAt(i) - 'a';
            if ((duplicate & (1 << n)) == 0) return i;
        }
        return -1;
    }
}
